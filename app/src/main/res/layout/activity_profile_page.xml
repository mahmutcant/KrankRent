<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/anasayfa"
    tools:context=".ProfilePage">
    <include
        android:id="@+id/include"
        layout="@layout/toolbar" />
    <androidx.cardview.widget.CardView
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintWidth_percent=".8"
        app:layout_constraintHeight_percent=".8"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="30dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:backgroundTint="@color/white">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="25dp"
            android:textColor="@color/themeColor"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="20dp"
            android:text="Adınız"/>
        <EditText
            android:id="@+id/txtProfilAdi"
            android:textColor="@color/themeColor"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:background="@drawable/mybutton"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="40dp"
            android:layout_marginTop="45dp"
            android:enabled="false"
            android:backgroundTint="@color/editTextColor"
            android:textColorHint="@color/themeColor" />
        <ImageView
            android:id="@+id/acAdi"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_baseline_edit_24"
            android:layout_gravity="end"
            android:layout_marginTop="50dp"
            android:layout_marginRight="10dp"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="25dp"
            android:textColor="@color/themeColor"
            android:layout_marginTop="80dp"
            android:layout_marginLeft="20dp"
            android:text="Soyadınız"/>
        <EditText
            android:layout_width="match_parent"
            android:enabled="false"
            android:layout_height="35dp"
            android:background="@drawable/mybutton"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="40dp"
            android:layout_marginTop="100dp"
            android:backgroundTint="@color/editTextColor"
            android:textColorHint="@color/themeColor" />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="25dp"
            android:textColor="@color/themeColor"
            android:layout_marginTop="80dp"
            android:layout_marginLeft="20dp"
            android:text="Soyadınız"/>
        <EditText
            android:id="@+id/txtProfilSoyadi"
            android:textColor="@color/themeColor"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:background="@drawable/mybutton"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="40dp"
            android:layout_marginTop="100dp"
            android:backgroundTint="@color/editTextColor"
            android:textColorHint="@color/themeColor" />
        <ImageView
            android:id="@+id/acSoyad"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_baseline_edit_24"
            android:layout_gravity="end"
            android:layout_marginTop="105dp"
            android:layout_marginRight="10dp"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="25dp"
            android:textColor="@color/themeColor"
            android:layout_marginTop="135dp"
            android:layout_marginLeft="20dp"
            android:text="Telefon"/>
        <EditText
            android:id="@+id/txtProfilTelefon"
            android:textColor="@color/themeColor"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:background="@drawable/mybutton"
            android:enabled="false"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="40dp"
            android:layout_marginTop="160dp"
            android:backgroundTint="@color/editTextColor"
            android:textColorHint="@color/themeColor" />
        <ImageView
            android:id="@+id/acTelefon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_baseline_edit_24"
            android:layout_gravity="end"
            android:layout_marginTop="165dp"
            android:layout_marginRight="10dp"
            />
        <ImageView
            android:id="@+id/acSehirSpinner"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_baseline_edit_24"
            android:layout_gravity="end"
            android:layout_marginTop="240dp"
            android:layout_marginRight="10dp"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Şehir"
            android:textColor="@color/themeColor"
            android:layout_marginTop="210dp"
            android:layout_marginLeft="20dp"
            />
        <Spinner
            android:id="@+id/spinnerProfilSehir"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="240dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="40dp"
            android:background="@drawable/myedittext"
            android:backgroundTint="@color/editTextColor"
            />
        <Button
            android:id="@+id/btnProfilKaydet"
            android:layout_width="170dp"
            android:layout_height="45dp"
            android:layout_gravity="center|bottom"
            android:layout_marginBottom="180dp"
            android:text="Kaydet"
            android:background="@drawable/mybutton"
            android:backgroundTint="@color/themeColor"
            />
        <Button
            android:id="@+id/btnProfilVazgec"
            android:layout_width="170dp"
            android:layout_height="45dp"
            android:layout_gravity="center|bottom"
            android:layout_marginBottom="100dp"
            android:text="Vazgeç"
            android:textColor="@color/themeColor"
            android:background="@drawable/mybutton"
            android:backgroundTint="@color/editTextColor"
            />
    </androidx.cardview.widget.CardView>
</androidx.constraintlayout.widget.ConstraintLayout>